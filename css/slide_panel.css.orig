/**
 * @file Styling for the slide panel
 *
 */

.snap-content {

    /* position: absolute; */
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: auto;
  height: auto;
  /* z-index: 2; */
  overflow: auto;
  
  /* background-color: #ffffff; */

  -webkit-overflow-scrolling: touch;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  -o-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);

  /*
  -webkit-transform: background-color 0.1s ease;
  -moz-transform: background-color 0.1s ease;
  -ms-transform: background-color 0.1s ease;
  -o-transform: background-color 0.1s ease;
  transition: background-color 0.1s ease;
  */
}

.snap-drawers {

    float: left;
    /* position: absolute; */
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    /* width: auto; */
    /* width: 30%; */
    height: auto;

    width: 0%;
    -webkit-overflow-scrolling: touch;
    -webkit-transition: width 0.3s ease;
    -moz-transition: width 0.3s ease;
    -ms-transition: width 0.3s ease;
    -o-transition: width 0.3s ease;
    transition: width 0.3s ease;
}

.snap-drawer {

    /* position: absolute; */
    top: 0;
    right: auto;
    bottom: 0;
    left: auto;

  /* width: 265px; */

  height: auto;
  overflow: auto;
  
  /* opacity: 0.0; */
  /*
  -webkit-transform: opacity 0.3s ease;
  -moz-transform: opacity 0.3s ease;
  -ms-transform: opacity 0.3s ease;
  -o-transform: opacity 0.3s ease;
  transition: opacity 0.3s ease;
  */

  -webkit-overflow-scrolling: touch;
  -webkit-transition: width 0.3s ease;
  -moz-transition: width 0.3s ease;
  -ms-transition: width 0.3s ease;
  -o-transition: width 0.3s ease;
  transition: width 0.3s ease;
}

.snap-drawer-left {
  left: 0;
  z-index: 1;
  margin-left: 2%;
}

.snap-drawer-right {
  right: 0;
  z-index: 1;
}

.snapjs-left .snap-drawer-right,
.snapjs-right .snap-drawer-left {

    opacity: 0.0;
}

.snapjs-expand-left .snap-drawer-left,
.snapjs-expand-right .snap-drawer-right {
  width: 100%;
}

.panel-container {

    position: relative;
}

